{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "types":["reflect-metadata"],
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}