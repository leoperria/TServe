{
  "name": "leonardo-perria-tstest",
  "version": "1.0.0",
  "description": "A sample RESTful API built in typescript and expressjs",
  "main": "src/index.ts",
  "scripts": {
    "lint": "./node_modules/.bin/tslint -c ./tslint.json -p tsconfig.json 'src/**/*.ts' --format stylish",
    "build": "npm run lint && npm run clean:dist && npm run transpile && npm run copy:assets",
    "transpile": "./node_modules/.bin/tsc",
    "clean:dist": "./node_modules/.bin/rimraf ./dist",
    "copy:assets": "npm run copy:public",
    "copy:public": "./node_modules/.bin/copyup ./src/public/* ./dist",
    "serve": "./node_modules/.bin/nodemon --watch 'src/**/*.ts' --watch 'src/**/*.json'",
    "start": "node dist/index.js"
  },
  "author": "Leonardo Perria <leonardo.perria@gmail.com>",
  "dependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/chalk": "^0.4.31",
    "@types/express": "^4.0.35",
    "@types/helmet": "0.0.35",
    "@types/lodash": "^4.14.64",
    "@types/winston": "^2.3.3",
    "body-parser": "^1.17.2",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "copyfiles": "^1.2.0",
    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "inversify": "^4.1.1",
    "inversify-express-utils": "^3.5.1",
    "lodash": "^4.17.4",
    "morgan": "^1.7.0",
    "nodemon": "^1.11.0",
    "protractor": "^5.1.2",
    "reflect-metadata": "^0.1.10",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "rimraf": "^2.6.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4",
    "winston": "^2.3.1"
  },
  "license": "MIT"
}
